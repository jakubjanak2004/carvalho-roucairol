<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    disableAnsi="false"
                    pattern="%highlight{%d{HH:mm:ss.SSS} %-5level [%t] %c{1} - %msg%n}{FATAL=yellow, ERROR=yellow, WARN=red, INFO=yellow, DEBUG=yellow, TRACE=yellow}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
